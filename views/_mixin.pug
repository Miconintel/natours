mixin reviewCards (review)
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src=`/img/users/${review.parentUser.photo}`, alt=`${review.parentUser.name}`)
      h6.reviews__user= review.parentUser.name
    p.reviews__text= review.review
    .reviews__rating
      each star in [1,2,3,4,5]
        svg.reviews__star(class=`reviews__star--${review.rating>=star?'active':'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')
